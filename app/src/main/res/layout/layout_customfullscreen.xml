<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/tx_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RadioGroup
        android:id="@+id/rg_mimpro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小程序环境："
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <RadioButton
            android:id="@+id/minpro_test"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="测试环境"
            />
        <RadioButton
            android:id="@+id/minpro_dev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="开发环境"
            />
        <RadioButton
            android:id="@+id/minpro_rel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="正式环境"
            />

    </RadioGroup>
    <RadioGroup
        android:id="@+id/rg_tx_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/tx_dp_10"
        app:layout_constraintTop_toBottomOf="@+id/rg_mimpro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="app环境："
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <RadioButton
            android:id="@+id/app_test"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="测试环境"
            />
        <RadioButton
            android:id="@+id/app_dev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="开发环境"
            />
        <RadioButton
            android:id="@+id/app_rel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="正式环境"
            />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/rg_tx_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/tx_dp_10"
        app:layout_constraintTop_toBottomOf="@+id/rg_tx_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小程序路径path："
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/et_tx_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rg_tx_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/tx_dp_10"
        app:layout_constraintTop_toBottomOf="@+id/rg_tx_path"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小程序username："
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/et_tx_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_tx_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>