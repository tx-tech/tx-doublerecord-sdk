<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_page_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tx_dimen_20dp"
        android:layout_marginTop="@dimen/tx_dimen_20dp"
        android:layout_marginEnd="@dimen/tx_dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_asr_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tx_dimen_16sp"
            tools:text="请投保人回复：" />

        <TextView
            android:id="@+id/tv_agent_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/tx_dimen_10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tx_dimen_16sp"
            tools:text="12313131312312312312312312312313131321331231313131313131313" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tx_dimen_20dp"
        android:layout_marginTop="@dimen/tx_dimen_20dp"
        android:layout_marginEnd="@dimen/tx_dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_asr_content_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="听到了："
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tx_dimen_16sp" />

        <TextView
            android:id="@+id/tv_user_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tx_dimen_20dp"
            android:layout_marginEnd="@dimen/tx_dimen_20dp"
            android:lineSpacingExtra="@dimen/tx_dimen_10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tx_dimen_16sp"
            tools:text="123131313123123123" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/page_asr_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/tx_dimen_20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_dimen_10dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/tx_dimen_10dp"
            android:text="请讲普通话，音量清晰，语速适中"
            android:textColor="@color/color_AAAAAA"
            android:textSize="@dimen/tx_dimen_14sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_dimen_10dp"
            android:src="@drawable/tx_asr_result" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/tx_dimen_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/tx_dimen_10dp"
                android:text="请"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/tx_dimen_14sp" />

            <TextView
                android:id="@+id/tv_count_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/tx_dimen_10dp"
                android:text=""
                android:textColor="@color/color_ED6656"
                android:textSize="@dimen/tx_dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/tx_dimen_10dp"
                android:text="内完成回复"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/tx_dimen_14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ll_page_voice_result_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/tx_dimen_20dp"
        android:drawableStart="@drawable/tx_nopass_icon"
        android:drawablePadding="@dimen/tx_dimen_10dp"
        android:text="质检未通过"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/tx_dimen_16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ll_page_voice_result_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/tx_dimen_20dp"
        android:drawableStart="@drawable/tx_pass_icon"
        android:drawablePadding="@dimen/tx_dimen_10dp"
        android:gravity="center"
        android:text="质检通过"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_page_voice_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/tx_dimen_25dp"
        android:paddingTop="@dimen/tx_dimen_15dp"
        android:paddingEnd="@dimen/tx_dimen_25dp"
        android:paddingBottom="@dimen/tx_dimen_15dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/ll_page_voice_result_mark"
            android:layout_width="@dimen/tx_dimen_80dp"
            android:layout_height="@dimen/tx_dimen_28dp"
            android:background="@drawable/tx_shape_goods_item_thespot_no_15"
            android:gravity="center"
            android:text="标记成功"
            android:textColor="@color/color_868789"
            android:textSize="@dimen/tx_dimen_14sp" />

        <TextView
            android:id="@+id/ll_page_voice_result_jump"
            android:layout_width="@dimen/tx_dimen_80dp"
            android:layout_height="@dimen/tx_dimen_28dp"
            android:layout_marginLeft="@dimen/tx_dimen_20dp"
            android:background="@drawable/tx_shape_goods_item_thespot_no_15"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/color_868789"
            android:textSize="@dimen/tx_dimen_14sp" />

        <TextView
            android:id="@+id/ll_page_voice_result_retry"
            android:layout_width="@dimen/tx_dimen_80dp"
            android:layout_height="@dimen/tx_dimen_28dp"
            android:layout_marginStart="@dimen/tx_dimen_20dp"
            android:background="@drawable/tx_shape_goods_item_thespot_yes"
            android:clickable="true"
            android:gravity="center"
            android:text="重试"
            android:textColor="@color/color_FFFFFF" />

    </LinearLayout>
</LinearLayout>
