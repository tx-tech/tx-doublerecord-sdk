<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_envpreview"
    android:orientation="vertical"
    android:visibility="visible"
    android:gravity="center"
    android:background="@color/tx_txcolor_F6F7F9"
    android:layout_marginTop="@dimen/tx_dimen_40dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="为确保双录视频质量，系统将在双录前进行环境检测。"
        android:textSize="@dimen/tx_dimen_14sp"
        android:textColor="@color/tx_txblack"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tx_dimen_20dp"
        android:textSize="@dimen/tx_dimen_12sp"
        android:text="如发现检测不合格，请按提示调整后重新检测录制环境" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tx_checkenv_tip" />


</LinearLayout>