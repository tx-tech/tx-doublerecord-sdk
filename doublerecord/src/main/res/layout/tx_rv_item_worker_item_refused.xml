<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tx_bg_lineup_shape"
    android:layout_height="wrap_content"
    android:padding="@dimen/tx_dimen_5dp"
    android:layout_marginTop="@dimen/tx_dimen_10dp"
    android:layout_marginLeft="@dimen/tx_dimen_10dp"
    android:layout_marginRight="@dimen/tx_dimen_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/tx_include_layout_item_common" />
        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/tx_dimen_10dp"
            android:padding="@dimen/tx_dimen_10dp"
            android:text="质检详情"
            android:textColor="@color/tx_txcolorPrimary"
            android:textSize="@dimen/tx_dimen_15sp"
            android:drawableLeft="@drawable/tx_detail_icon"
            android:drawablePadding="@dimen/tx_dimen_5dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee"
        android:layout_marginTop="@dimen/tx_dimen_10dp"
        android:layout_marginStart="@dimen/tx_dimen_16dp"
        android:layout_marginEnd="@dimen/tx_dimen_16dp"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/tv_item1_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新录制"
            android:layout_marginRight="@dimen/tx_dimen_20dp"
            android:layout_marginTop="@dimen/tx_dimen_10dp"
            android:layout_marginBottom="@dimen/tx_dimen_10dp"
            style="@style/txButtonStyle_1"
            />


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>