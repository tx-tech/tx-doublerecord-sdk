<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_common"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tx_dimen_10dp"
    android:layout_marginLeft="@dimen/tx_dimen_10dp"
    android:layout_marginRight="@dimen/tx_dimen_10dp"
    android:background="@drawable/tx_bg_lineup_shape"
    android:padding="@dimen/tx_dimen_5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:text="质检结果"
                android:textColor="@color/tx_txcolor_888888"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_width="@dimen/tx_dimen_100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_result"
                android:textColor="@color/tx_txcolor_000000"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:text="上传时间"
                android:textColor="@color/tx_txcolor_888888"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_width="@dimen/tx_dimen_100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_uploadedtime"
                android:textColor="@color/tx_txcolor_000000"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_failType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/tx_dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:text="不通过类型"
                android:textColor="@color/tx_txcolor_888888"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_width="@dimen/tx_dimen_100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_failType"
                android:textColor="#101010"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tx_dimen_40dp"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_failReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tx_dimen_16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:text="不通过原因"
                android:textColor="@color/tx_txcolor_888888"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_width="@dimen/tx_dimen_100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_failReason"
                android:textColor="#101010"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tx_dimen_14sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tx_dimen_40dp"
                />

        </android.support.v7.widget.LinearLayoutCompat>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/tx_dimen_10dp"
        android:text="播放"
        android:textColor="@color/tx_txcolorPrimary"
        android:textSize="@dimen/tx_dimen_15sp"
        android:drawableLeft="@drawable/tx_playvideo_icon"
        android:drawablePadding="@dimen/tx_dimen_5dp"
        />


</RelativeLayout>