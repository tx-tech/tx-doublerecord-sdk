<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/tx_dimen_10dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:background="@drawable/bg_sign">

        <ImageView
            android:id="@+id/iv_page_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.txt.sl.widget.SignView
            android:id="@+id/iv_page_sign_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_page12_sign"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/tx_dimen_100dp"
            android:background="@drawable/tx_shape_green_1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/tx_dimen_14sp" />

        <TextView
            android:id="@+id/tv_page12_clear"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:background="@drawable/tx_shape_green_2"
            android:gravity="center"
            android:text="清除"
            android:textColor="@color/color_00965E"
            android:textSize="@dimen/tx_dimen_14sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_page12_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/page12_sign_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tx_dimen_20dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/ll_page12_result_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/tx_nopass_icon"
                android:drawablePadding="@dimen/tx_dimen_10dp"
                android:visibility="gone"
                android:text="质检未通过，请再重试" />

            <TextView
                android:id="@+id/ll_page12_result_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="质检通过..."
                android:drawableStart="@drawable/tx_pass_icon"
                android:drawablePadding="@dimen/tx_dimen_10dp"
                android:gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
