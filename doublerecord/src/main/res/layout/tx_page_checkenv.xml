<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_checkenv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/tx_dimen_40dp"
    android:layout_marginBottom="@dimen/tx_dimen_5dp"
    android:padding="5dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_checkenvstate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/tx_checkenv_bg"
        android:gravity="center"
        android:text="监测中"
        android:textColor="@color/color_FFFFFF"
        android:layout_marginTop="@dimen/tx_dimen_50dp"
        android:layout_marginLeft="@dimen/tx_dimen_100dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/checkenv_recyclerview"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tv_checkenvstate"
        android:layout_marginLeft="@dimen/tx_dimen_100dp"
        android:layout_marginBottom="@dimen/tx_dimen_40dp"
        />


    <TextView
        android:id="@+id/pagetwo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3s正在跳转至下一步"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/tx_dimen_40dp"
        android:layout_marginBottom="@dimen/tx_dimen_20dp"
        />

    <LinearLayout
        android:id="@+id/ll_checkenv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/tx_dimen_25dp"
        android:paddingTop="@dimen/tx_dimen_5dp"
        android:paddingBottom="@dimen/tx_dimen_5dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_checkenv_retry"
            style="@style/txButtonStyle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/tx_dimen_20dp"
            android:layout_marginEnd="@dimen/tx_dimen_35dp"
            android:text="重新检测" />

        <TextView
            android:id="@+id/tv_checkenv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tx_dimen_20dp"
            android:layout_marginEnd="@dimen/tx_dimen_35dp"
            android:background="@drawable/tx_shape_goods_item_thespot_no_15"
            android:gravity="center"
            android:paddingStart="@dimen/tx_dimen_10dp"
            android:paddingTop="@dimen/tx_dimen_5dp"
            android:paddingEnd="@dimen/tx_dimen_10dp"
            android:paddingBottom="@dimen/tx_dimen_5dp"
            android:text="坚持录制"
            android:textColor="@color/color_868789"
            android:textSize="@dimen/tx_dimen_14sp" />

        <TextView
            android:id="@+id/tv_checkenv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tx_dimen_20dp"
            android:layout_marginEnd="@dimen/tx_dimen_35dp"
            android:background="@drawable/tx_shape_goods_item_thespot_no_15"
            android:gravity="center"
            android:paddingStart="@dimen/tx_dimen_10dp"
            android:paddingTop="@dimen/tx_dimen_5dp"
            android:paddingEnd="@dimen/tx_dimen_10dp"
            android:paddingBottom="@dimen/tx_dimen_5dp"
            android:text="退出录制"
            android:textColor="@color/color_868789"
            android:textSize="@dimen/tx_dimen_14sp" />


    </LinearLayout>

</RelativeLayout>