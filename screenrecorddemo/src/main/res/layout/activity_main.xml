<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/tx_dimen_20dp"
         >

        <TextView
            android:id="@+id/tv_startrecord"
            android:layout_width="@dimen/tx_dimen_100dp"
            android:layout_height="@dimen/tx_dimen_50dp"
            android:gravity="center"
            android:text="开始录屏"
            />

        <TextView
            android:id="@+id/tv_stoprecord"
            android:layout_width="@dimen/tx_dimen_100dp"
            android:layout_height="@dimen/tx_dimen_50dp"
            android:gravity="center"
            android:text="结束录屏"
            />

        <TextView
            android:id="@+id/tv_starttts"
            android:layout_width="@dimen/tx_dimen_100dp"
            android:layout_height="@dimen/tx_dimen_50dp"
            android:gravity="center"
            android:text="开始播报"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>