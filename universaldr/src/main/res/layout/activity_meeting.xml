<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tx_txcolor_FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_exitroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/tx_dp_10"
        android:text="退出"
        android:onClick="onMeetClick"
        android:textColor="@color/tx_color_ce1b2b" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bg_gotovideo" />

    <Button
        android:id="@+id/tv_createroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/demo_shape_round_3"
        android:gravity="center"
        android:onClick="onMeetClick"
        android:text="创建保单信息"
        android:textColor="@color/tx_txcolor_FFFFFF"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/tv_reservationroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/demo_shape_round_3"
        android:gravity="center"
        android:onClick="onMeetClick"
        android:text="我的双录"
        android:textColor="@color/tx_txcolor_FFFFFF"
        android:textSize="16sp" />


</LinearLayout>